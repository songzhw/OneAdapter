<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView android:layout_width="80dp" android:layout_height="80dp"
        android:layout_margin="10dp" android:src="@mipmap/ic_launcher"
        />

    <TextView android:id="@+id/tvName" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:text="hello" android:textSize="28dp" android:textColor="#000"
        />
    <TextView android:id="@+id/tvAmount"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:gravity="center_vertical" android:layout_marginRight="10dp"
        tools:text="$30.00" android:textSize="30dp" android:textColor="#f00"
        />
</LinearLayout>